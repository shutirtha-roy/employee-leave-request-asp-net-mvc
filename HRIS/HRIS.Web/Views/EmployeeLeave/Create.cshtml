@model EmployeeLeaveModel


@{
    ViewData["Title"] = "Create";
}

<div class="text-center">
    <h1 class="form-title"> Add Employee Leave</h1>
</div>

<form class="mt-5 mt-5" asp-antiforgery="true" asp-action="Create" asp-controller="EmployeeLeave" runat="server">
    <div class="mx-auto text-center mb-5" style="width: 620px;">

        <div class="form-group">
            <label asp-for="EmployeeId">Please select the employee</label>
            <select class="form-control" onchange="getEmployeeValue()" asp-for="EmployeeId" id="EmployeeProfileDropdown"></select>
            <span asp-validation-for="EmployeeId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LeaveTypeId">Please select the leave type</label>
            <select class="form-control" onchange="getValue()" asp-for="LeaveTypeId" id="LeaveTypeDropdown"></select>
            <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="LeaveDate"></label>
            <input type="datetime-local" class="form-control" asp-for="LeaveDate" class="form-control" />
            <span asp-validation-for="LeaveDate" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="Remarks"></label>
            <input type="text" asp-for="Remarks" class="form-control" />
            <span asp-validation-for="Remarks" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width: 150px">Create</button>
    </div>>


</form>


<br /><br />

<table id="tblEmployeeLeaveData" class="table table-bordered table-striped" style="width: 100%">
    <thead>
        <tr>
            <th>Date</th>
            <th>Remarks</th>
        </tr>
    </thead>

        
</table>

@section Scripts 
{
    @{
        <partial name="_ValidationScriptsPartial" />

    }

    <script src="~/js/employeeProfile.js"></script>
    <script src="~/js/employeeLeave.js"></script>
    
}